<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/sliderBuddyProfile"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/buddy1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/sliderBuddyName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="9dp"
            android:text="버디이름"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/sliderImageView"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/SliderImageLike"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/slider_like"/>

        <TextView
            android:id="@+id/SliderImageLikeNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="200"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="명이 좋아합니다."/>
    </LinearLayout>
</LinearLayout>