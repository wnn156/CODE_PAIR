<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="체크리스트"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/checklist_title_back"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:background="@drawable/checklist_dialog">

        <TextView
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="61dp"
            android:id="@+id/checklist_photographer_buddyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="61dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/checklist_photographer_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" ~  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/checklist_photographer_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/checklist_photographer_location"
            android:layout_gravity="left"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="61dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="61dp" >
            <TextView
                android:id="@+id/checklist_photographer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="명"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="87dp" >
            <TextView
                android:id="@+id/checklist_photographer_suggestPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"/>
        </LinearLayout>
        <TextView
            android:id="@+id/checklist_photographer_suggest1"
            android:layout_gravity="left"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="87dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_marginBottom="23dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/findPwDialogCancelTv"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/checklist_reject"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:text="    "/>

        <TextView
            android:id="@+id/findPwDialogFindTv"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/checklist_accept"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:text="    " />
    </LinearLayout>

</LinearLayout>